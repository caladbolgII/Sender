<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainview"
    android:clickable="false"
    android:longClickable="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#ff424242"
    android:orientation="vertical"

    >


    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.80"
        android:background="#ff424242">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:clickable="false"
            android:longClickable="false"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:background="#ff424242"
            android:baselineAligned="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">
            <Button
                android:layout_width="400dp"
                android:layout_height="0dp"
                android:text="Connect to your Chromecast then select a layout"
                android:id="@+id/layout_button"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.70" />
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:clickable="false"
            android:longClickable="false"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:background="#ff424242"
            android:baselineAligned="true"
            android:layout_weight="0.25"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp">



                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:id="@+id/l1"
                    android:onClick="set_layout1"
                    android:background="@drawable/layout1"
                    android:textColor="#e9e9e9"
                    android:textSize="12sp"
                    android:layout_gravity="center|left"
                    android:layout_marginRight="5dp" />


                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:id="@+id/l2"
                    android:onClick="set_layout2"
                    android:background="@drawable/layout2"
                    android:textColor="#e9e9e9"
                    android:textSize="12sp"
                    android:layout_gravity="center"
                    android:layout_marginRight="5dp" />


                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:id="@+id/l3"
                    android:onClick="set_layout3"
                    android:background="@drawable/layout3"
                    android:textColor="#e9e9e9"
                    android:textSize="12sp"
                    android:layout_gravity="center|right" />



        </LinearLayout>


        </LinearLayout>
        <android.support.v7.app.MediaRouteButton
            android:id="@+id/media_route_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:mediaRouteTypes="user"
            android:background="@drawable/circle"
            android:elevation="12dp"
            android:layout_alignParentEnd="false"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="17dp"
            android:layout_alignParentStart="false"
            android:layout_marginRight="17dp" />

    </RelativeLayout>

</LinearLayout>
