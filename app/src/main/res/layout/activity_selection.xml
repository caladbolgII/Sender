<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gridview"
    style="@style/Hello"
    android:clickable="false"
    android:longClickable="false"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:columnCount="2"
    android:orientation="vertical"
    android:rowCount="3"
    >

    <Button
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:text="@string/cast_video"
        android:id="@+id/button"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_gravity="fill"
        android:onClick="open_video"
        android:background="@drawable/videobutton"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_rowSpan="2"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        android:padding="5dp"
        android:textColor="#ffffffff" />

    <Button
        android:layout_width="100dp"
        android:layout_height="175dp"
        android:text="@string/cast_img"
        android:id="@+id/button2"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_gravity="fill"
        android:onClick="open_image"
        android:background="@drawable/imagebutton"
        android:textStyle="bold"
        android:textSize="30dp"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        android:textColor="#ffffffff"
        android:padding="5dp" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Twitter"
        android:id="@+id/button4"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_rowSpan="2"
        android:layout_columnSpan="1"
        android:layout_gravity="fill"
        android:clickable="false"
        android:enabled="false"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        android:background="@drawable/twitter_icon"
        android:onClick="open_twitter"
        android:cropToPadding="true"
        android:padding="5dp" />

    <Button
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:text="@string/cast_text"
        android:id="@+id/button3"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_gravity="fill"
        android:layout_columnSpan="1"
        android:onClick="open_sender"
        android:textStyle="bold"
        android:textSize="30dp"
        android:background="@drawable/textbutton"
        android:layout_rowSpan="1"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        android:padding="5dp"
        android:textColor="#ffffffff" />

</GridLayout>
