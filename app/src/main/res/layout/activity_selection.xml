<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gridview"
    style="@style/Hello"
    android:clickable="false"
    android:longClickable="false"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:columnCount="2"
    android:orientation="vertical"
    android:rowCount="3"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/BBCAST"
        android:id="@+id/textView"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:textColor="#ff000000"
        android:textColorHighlight="@android:color/holo_red_dark"
        />

    <Button
        android:layout_width="320dp"
        android:layout_height="200dp"
        android:text="@string/cast_video"
        android:id="@+id/button"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_gravity="fill"
        android:onClick="open_video"
        android:background="@drawable/gradient_box"
        android:textSize="30dp"
        android:textStyle="bold" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/cast_img"
        android:id="@+id/button2"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_gravity="fill"
        android:onClick="open_image"
        android:background="@drawable/gradient_box"
        android:textStyle="bold"
        android:textSize="30dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cast_text"
        android:id="@+id/button3"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_gravity="fill"
        android:layout_columnSpan="2"
        android:onClick="open_sender"
        android:textStyle="bold"
        android:textSize="30dp"
        android:background="@drawable/gradient_box" />
</GridLayout>
