<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="cast.ucl.sender.text"
    style="@style/bg"
    android:orientation="vertical"
    android:background="#ffecf0f1">

    <EditText
        android:layout_width="1000px"
        android:layout_height="100px"
        android:id="@+id/text_message"
        android:hint="@string/edit_message3"
        android:editable="true"
        android:enabled="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="false"
        android:textColor="#ffffffff"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/post_message"
        android:id="@+id/buttontext"
        android:onClick="attemptSend"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/deadline_text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/selectdeadline"
        android:id="@+id/textView5"
        android:textColor="#ff000000"
        android:textAlignment="textEnd"
        android:textSize="25dp"
        android:textIsSelectable="true"
        android:textStyle="bold"
        android:layout_below="@+id/text_message"
        android:layout_centerHorizontal="true"
        android:layout_alignParentStart="false" />

    <DatePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/deadline_text"
        android:datePickerMode="spinner"
        android:calendarViewShown="false"
        android:layout_above="@+id/buttontext"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
