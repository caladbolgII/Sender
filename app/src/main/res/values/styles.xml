        <item name="android:titleTextStyle">@style/MyTheme.ActionBar.TitleTextStyle</item>
        <item name="android:textColor">#dedede</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.ActionBar">
