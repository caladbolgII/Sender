<resources>

    <!-- Base application theme. -->
    <style name="Hello" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:editTextStyle">@style/Widget.EditText.Black</item>
        <item name= "android:background">#ff3e3e3e</item>
        <item name="actionBarSize">50dip</item>
        <item name="android:actionBarStyle">@style/MyTheme.ActionBarStyle</item>
        <item name="android:textColor">#dedede</item>

    </style>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

    </style>
    <style name="bg" parent="Theme.AppCompat.Light">
        <item name="android:editTextStyle">@style/Widget.EditText.Black</item>
        <item name= "android:background">#ff3e3e3e</item>
        <item name="actionBarSize">50dip</item>
        <item name="android:actionBarStyle">@style/MyTheme.ActionBarStyle</item>
        <item name="android:textColor">#dedede</item>

    </style>
